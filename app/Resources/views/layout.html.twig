{% extends 'base.html.twig' %}

{% block stylesheets %}
    {% stylesheets '@css' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {% javascripts '@js' %}
    <script src="https://code.jquery.com/jquery-2.2.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script src="{{ asset_url }}"></script>
    <script>
        $(document).ready(function () {
            $('.date').inputmask("mask", {
                "mask": "99.99.9999",
                "placeholder": "дд.мм.гггг"
            });
            $('.datetime').inputmask("mask", {
                "mask": "99.99.9999 99:99",
                "placeholder": "дд.мм.гггг чч:мм"
            });
        });
    </script>
    {% endjavascripts %}
{% endblock %}

{% block body %}
    <div class="container">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                            data-target="#menu" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('homepage') }}">{{ 'homepage'|trans }}</a>
                </div>

                <div class="collapse navbar-collapse" id="menu">
                    <ul class="nav navbar-nav">
                        <li><a href="{{ path('team.list') }}">{{ 'team.list'|trans }}</a></li>
                        <li><a href="{{ path('player.list') }}">{{ 'player.list'|trans }}</a></li>
                        <li><a href="{{ path('match.list') }}">{{ 'match.list'|trans }}</a></li>
                        <li><a href="{{ path('user.list') }}">{{ 'user.list'|trans }}</a></li>
                        <li><a href="{{ path('security.login') }}">{{ 'security.login'|trans }}</a></li>
                        <li><a href="{{ path('registration') }}">{{ 'registration'|trans }}</a></li>
                    </ul>
                </div>

                <a class="btn btn-default" href="{{ logout_path('main') }}" role="button">
                    <i class="fa fa-sign-out fa-lg"></i> {{ 'security.logout'|trans }}</a>

            </div>
        </nav>


        {% if app.session.flashbag.keys is not empty %}
            <div class="row">
                <div class="col-xs-12">
                    {% for type, flashMessages in app.session.flashbag.all() %}
                        {% for flashMessage in flashMessages %}
                            <div class="alert alert-{{ type }}">
                                {{ flashMessage|trans }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>
            </div>
        {% endif %}


        {% block content %}{% endblock %}

    </div>

    <footer class="footer">
        <div class="container">
            <p class="text-muted pull-right">
                <a href="{{ path('about') }}">{{ 'common.about'|trans }}</a> | <a
                        href="{{ path('contacts') }}">{{ 'common.contacts'|trans }}</a> | <a
                        href="{{ path('feedback') }}">{{ 'common.feedback'|trans }}</a> | <a
                        href="{{ path('advertising') }}">{{ 'common.advertising'|trans }}</a>
            </p>
            <p class="text-muted">
                <i class="fa fa-copyright"></i> <a href="http://sameddin.pro/">Sameddin</a> 2016 All rights reserved.
            </p>
        </div>
    </footer>

{% endblock %}
