{% extends 'layout.html.twig' %}

{% block content %}

    <table class="table table-condensed">
        <thead>
        <tr>
            <th>ID</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Password</th>
        </tr>
        </thead>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td><a href="{{ path('user.view', {id: user.id}) }}">{{ user.fullName }}</a></td>
                <td>{{ user.email }}</td>
                <td>{{ user.password }}</td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}
