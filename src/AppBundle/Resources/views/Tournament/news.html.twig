{% extends 'layout.html.twig' %}

{% block content %}

    <h3>{{ tournament.name }}</h3>
    <h5><b>{{ 'common.country'|trans }}</b> : <span class="flag flag-{{ tournament.country.code|lower }}"></span>
        {{ tournament.country.name }}</h5>

    <ul class="nav nav-tabs">
        <li role="presentation" class="active"><a href="{{ path('tournament.news', {id: tournament.id }) }}">{{ 'common.newsline'|trans }}</a></li>
        <li role="presentation"><a href="{{ path('tournament.table', {id: tournament.id }) }}">{{ 'common.table'|trans }}</a></li>
        <li role="presentation"><a href="{{ path('tournament.calendar', {id: tournament.id }) }}">{{ 'common.calendar'|trans }}</a></li>
        <li role="presentation"><a href="{{ path('tournament.stat', {id: tournament.id }) }}">{{ 'common.stat'|trans }}</a></li>
    </ul>

{% endblock %}
