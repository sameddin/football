{% extends 'base.html.twig' %}

{% block body %}

    <h3>{{ player.name }}</h3>

    <table class="table table-condensed">
        <thead>
        <tr>
            <th>{{ 'player.number'|trans }}</th>
            <th>{{ 'player.team'|trans }}</th>
            <th>{{ 'player.role'|trans }}</th>
        </tr>
        </thead>
            <tr>
                <td>{{ player.number }}</td>
                <td><a href="{{ path('team.view', {id: player.team.id }) }}">{{ player.team.name }}</a></td>
                <td>{{ player.role.role }}</td>
            </tr>
    </table>

{% endblock %}
