{% extends 'base.html.twig' %}

{% block body %}
    <h1>Футболисты</h1>


    <table class="table table-condensed">
        <thead>
        <tr>
            <th>ID</th>
            <th>Number</th>
            <th>Name</th>
            <th>Team</th>
            <th>Role</th>
            <td></td>
        </tr>
        </thead>
        {% for player in players %}
            <tr>
                <td>{{ player.id }}</td>
                <td>{{ player.number }}</td>
                <td>{{ player.name }}</td>
                <td>{{ player.team.name }}</td>
                <td>{{ player.role.roles }}</td>
                <td>
                    <a class="btn btn-success btn-xs"
                          href="{{ path('player.edit', {'id': player.id  }) }}" role="button">Изменить</a>&nbsp;<a
                                class="btn btn-danger btn-xs" href="{{ path('player.delete',{'id': player.id}) }}"
                                role="button">Удалить</a>
                </td>
            </tr>
        {% endfor %}
    </table>


    <a class="btn btn-default" href="{{ path('player.add') }}" role="button">Добавить</a>
{% endblock %}

