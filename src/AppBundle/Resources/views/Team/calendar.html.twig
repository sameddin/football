{% extends 'base.html.twig' %}

{% block body %}

    <h3>{{ team.name }}</h3>
    <h5><b>{{ 'team.country'|trans }}</b> : {{ team.country.name }}</h5>
    <h5><b>{{ 'team.coach'|trans }}</b> : <a href="{{ path('coach.news', {id: team.coach.id}) }}">{{ team.coach.name }}</a></h5>

    <ul class="nav nav-tabs">
        <li role="presentation"><a href="{{ path('team.news', {id: team.id }) }}">{{ 'newsline'|trans }}</a></li>
        <li role="presentation" class="active"><a href="{{ path('team.calendar', {id: team.id }) }}">{{ 'calendar'|trans }}</a></li>
        <li role="presentation"><a href="{{ path('team.view', {id: team.id }) }}">{{ 'team.view'|trans }}</a></li>
        <li role="presentation"><a href="{{ path('team.stat', {id: team.id }) }}">{{ 'team.stat'|trans }}</a></li>
    </ul>

    <table class="table table-condensed">
        <thead>
        <tr>
            <th>{{ 'date'|trans }}</th>
            <th>{{ 'team.tournament'|trans }}</th>
            <th>Соперник</th>
            <th>Счет</th>
        </tr>
        </thead>
            <tr>
                <td>{{ team.match.date|date("d.m.Y | H:i") }}</td>
                <td>{{ team.tournament.name }}</td>
                <td></td>
                <td></td>
            </tr>
    </table>
{% endblock %}
