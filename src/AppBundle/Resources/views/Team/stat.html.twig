{% extends 'base.html.twig' %}

{% block body %}

    <h3>{{ team.name }}</h3>

    <table class="table table-condensed">
        <thead>
        <tr>
            <th>{{ 'player.number'|trans }}</th>
            <th>{{ 'player.name'|trans }}</th>
            <th>{{ 'player.match'|trans }}</th>
            <th>{{ 'player.goal'|trans }}</th>
            <th>{{ 'player.pass'|trans }}</th>
            <th>{{ 'player.yellowcard'|trans }}</th>
            <th>{{ 'player.redcard'|trans }}</th>
        </tr>
        </thead>
        {% for player in team.players %}
            <tr>
                <td>{{ player.number }}</td>
                <td><a href="{{ path('player.view', {id: player.id}) }}">{{ player.name }}</a></td>
                <td>{{ player.match }}</td>
                <td>{{ player.goal }}</td>
                <td>{{ player.pass }}</td>
                <td>{{ player.yellowcard }}</td>
                <td>{{ player.redcard }}</td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}
