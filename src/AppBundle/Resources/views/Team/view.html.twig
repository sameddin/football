{% extends 'base.html.twig' %}

{% block body %}

    <h3>{{ team.name }}</h3>
    <h5><b>{{ 'team.country'|trans }}</b> : {{ team.country.name }}</h5>
    <h5><b>{{ 'team.coach'|trans }}</b> : {{ team.coach.name }}</h5>

    <ul class="nav nav-tabs">
        <li role="presentation"><a href="{{ path('team.news', {id: team.id }) }}">{{ 'newsline'|trans }}</a></li>
        <li role="presentation"><a href="{{ path('team.calendar', {id: team.id }) }}">{{ 'calendar'|trans }}</a></li>
        <li role="presentation" class="active"><a href="{{ path('team.view', {id: team.id }) }}">{{ 'team.view'|trans }}</a></li>
        <li role="presentation"><a href="{{ path('team.stat', {id: team.id }) }}">{{ 'team.stat'|trans }}</a></li>
    </ul>

    <table class="table table-condensed">
        <thead>
        <tr>
            <th>{{ 'player.number'|trans }}</th>
            <th>{{ 'player.name'|trans }}</th>
            <th>{{ 'player.birth'|trans }}</th>
            <th>{{ 'player.height'|trans }}</th>
            <th>{{ 'player.weight'|trans }}</th>
            <th>{{ 'player.role'|trans }}</th>
        </tr>
        </thead>
        {% for player in team.players %}
            <tr>
                <td>{{ player.number }}</td>
                <td><a href="{{ path('player.view', {id: player.id}) }}">{{ player.name }}</a></td>
                <td>{{ player.birth|date("d.m.Y") }} | {{ 'player.age'|transchoice(player.age(today)) }}</td>
                <td>{{ player.height }}</td>
                <td>{{ player.weight }}</td>
                <td>{{ player.role.name }}</td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}
