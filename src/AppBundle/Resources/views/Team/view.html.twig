{% extends 'base.html.twig' %}

{% block body %}

    <h3>{{ team.name }}</h3>
    <h5><b>{{ 'team.country'|trans }}</b> : {{ team.country.country }}</h5>
    <h5><b>{{ 'team.coach'|trans }}</b> : {{ team.coach.name }}</h5>

    <h5><a href="{{ path('team.team', {id: team.id }) }}">{{ 'team.team'|trans }}</a> | <a href="{{ path('team.stat', {id: team.id }) }}">{{ 'team.stat'|trans }}</a></h5>

{% endblock %}
