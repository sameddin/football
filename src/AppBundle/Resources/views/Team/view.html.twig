{% extends 'base.html.twig' %}

{% block body %}

    <h3>{{ team.name }}</h3>

    <table class="table table-condensed">
        <thead>
        <tr>
            <th>{{ 'player.number'|trans }}</th>
            <th>{{ 'player.name'|trans }}</th>
            <th>{{ 'player.role'|trans }}</th>
        </tr>
        </thead>
        {% for player in team.players %}
            <tr>
                <td>{{ player.number }}</td>
                <td>{{ player.name }}</td>
                <td>{{ player.role.role }}</td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}
