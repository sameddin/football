{% extends 'base.html.twig' %}

{% block body %}

    <h3>{{ team.name }}</h3>
    <h5><b>{{ 'team.country'|trans }}</b> : {{ team.country.country }}</h5>
    <h5><b>{{ 'team.coach'|trans }}</b> : {{ team.coach.name }}</h5>

    <table class="table table-condensed">
        <thead>
        <tr>
            <th>{{ 'player.number'|trans }}</th>
            <th>{{ 'player.name'|trans }}</th>
            <th>{{ 'player.role'|trans }}</th>
        </tr>
        </thead>
        {% for player in team.players %}
            <tr>
                <td>{{ player.number }}</td>
                <td><a href="{{ path('player.view', {id: player.id}) }}">{{ player.name }}</a></td>
                <td>{{ player.role.role }}</td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}
