{% extends 'base.html.twig' %}

{% block body %}

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>{{ 'date'|trans }}</th>
                <th>{{ 'goals'|trans }}</th>
                <th>{{ 'passes'|trans }}</th>
                <th>{{ 'yellowcards'|trans }}</th>
                <th>{{ 'redcards'|trans }}</th>
            </tr>
        </thead>
        {% for match in matches %}
            <tr>
                <td>{{ match.date|date("d.m.Y | H:i") }}</td>
                <td>{{ match.goals|length }}</td>
                <td>{{ match.passes|length }}</td>
                <td>{{ match.yellowCards|length }}</td>
                <td>{{ match.redCards|length }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
